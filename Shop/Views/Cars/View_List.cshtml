@{
    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item">
                <img src="@Model.allCars[0].img" class="d-block w-100" alt="...">
                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>@Model.allCars[0].name</h1>
                        <p>@Model.allCars[0].shortDesc</p>
                        <p><a class="btn btn-lg btn-primary" href="#">More details</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item active">
                <img src="@Model.allCars[1].img" class="d-block w-100" alt="...">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>@Model.allCars[1].name</h1>
                        <p>@Model.allCars[1].shortDesc</p>
                        <p><a class="btn btn-lg btn-primary" href="#">More details</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Model.allCars[2].img" class="d-block w-100" alt="...">
                <div class="container">
                    <div class="carousel-caption text-end">
                        <h1>@Model.allCars[2].name</h1>
                        <p>@Model.allCars[2].shortDesc</p>
                        <p><a class="btn btn-lg btn-primary" href="#">More details</a></p>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}
<h1>All cars</h1>
<h3>@Model.currCategory</h3>
<div class="container mt-5">
    @{
        foreach (var car in Model.allCars)
        {
            <div>
                <h2>Model: @car.name</h2>
                <p>Price: @car.price.ToString("c")</p>
            </div>
        }
    }
</div>
